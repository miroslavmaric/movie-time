<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when a grid item is being pressed, but hasn't yet been activated (finger down) -->
    <item android:drawable="@color/movie_time_transparent_dark" android:state_pressed="true" />

    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active row
+         of a ListView -->
    <item android:drawable="@color/movie_time_transparent_dark" android:state_activated="true" />

    <!-- Default, "just hangin' out" state. -->
    <!--<item android:drawable="@android:color/transparent" />-->
    <item android:drawable="@color/movie_time_transparent_bright" />

</selector>